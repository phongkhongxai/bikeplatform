#Build
FROM maven:3.8.4-openjdk-17-slim AS build
WORKDIR /app
COPY bikeplatform /app/bikeplatform
RUN mvn package -f /app/bikeplatform/pom.xml

#multi-staging
FROM openjdk:17-slim  
WORKDIR /app
COPY --from=build /app/bikeplatform/target/bikeplatform-0.0.1-SNAPSHOT.jar app.jar

EXPOSE 8080
CMD ["java","-jar","app.jar"]

